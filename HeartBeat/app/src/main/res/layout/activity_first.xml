<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context="adminzhezhe.heartbeat.FirstActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/musicplay"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="2"
            android:orientation="vertical"
            android:layout_gravity="top">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="3"
                android:layout_gravity="top"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:id="@+id/backbutton"
                    android:src="@drawable/back_button"
                    android:layout_gravity="start"
                    android:gravity="start"
                    android:scaleType="fitStart"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:clickable="true"
                    android:onClick="goBack" />
                <LinearLayout
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0px"
                android:layout_weight="8"
                android:orientation="vertical"
                android:layout_gravity="center">
                <TextView android:id="@+id/songs_tile_playing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="120px"
                    android:paddingTop="@dimen/activity_horizontal_margin"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:layout_gravity="left"
                    android:singleLine="true"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:scrollHorizontally="true"
                    android:gravity="center"/>

                <TextView android:id="@+id/songs_info_playing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#3b3b3b"
                    android:textSize="54px"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:layout_gravity="top"
                    android:singleLine="true"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:gravity="center"/>

                </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="2.5"
            android:orientation="horizontal"
            android:gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/golike"
                android:clickable="true"
                android:onClick="goliked" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="0.5"
            android:weightSum="10"
            android:gravity="center_horizontal"
            android:orientation="horizontal">
            <SeekBar
                android:layout_width="0dp"
                android:id="@+id/seekbar"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:layout_weight="8"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            android:gravity="center"
            android:weightSum="8"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:id="@+id/imageView_past"
                android:scaleType="fitCenter"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:id="@+id/imageView_play"
                android:scaleType="fitCenter"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:id="@+id/imageView_next"
                android:scaleType="fitCenter"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/linear_hidden"
            android:layout_width="match_parent"
            android:layout_height="120dip"
            android:background="#F9DA9B"
            android:gravity="center"
            android:orientation="horizontal" >
            <LinearLayout
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:layout_width="0px"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="喜欢这首歌的人"
                android:textColor="#009688"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/likenum_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#009688"
                android:textSize="40sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0px"
                android:layout_weight="5"
                android:layout_height="match_parent"
                android:weightSum="10"
                android:gravity="center"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="0px"
                    android:layout_weight="5"
                    android:layout_gravity="center"
                    android:orientation="horizontal">
            <ImageView
                android:id="@+id/catty"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:src="@drawable/catty"
                android:scaleType="fitCenter"/>
                <ImageView
                    android:id="@+id/happy"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:src="@drawable/happy"
                    android:scaleType="fitCenter"/>
                <ImageView
                    android:id="@+id/guitar"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:src="@drawable/guitar"
                    android:scaleType="fitCenter"/>
                <ImageView
                    android:id="@+id/doggy"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:src="@drawable/doggy"
                    android:scaleType="fitCenter"/>
                <LinearLayout
                    android:layout_width="0px"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_gravity="top"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="4"/>
            <LinearLayout
                android:id="@+id/b_likenum"
                android:layout_width="0px"
                android:layout_height="55dip"
                android:layout_weight="1"
                android:background="@drawable/likednum3"
                android:gravity="center_horizontal"
                android:onClick="likenum"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0px"
                    android:layout_weight="6"
                    android:textSize="18dp"
                    android:textColor="#009688"
                    android:id="@+id/likenum_s"
                    android:gravity="center"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="0px"
                    android:layout_weight="4"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"/>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>
